<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="132dp"
        android:layout_height="124dp"
        android:layout_marginBottom="125dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        tools:srcCompat="R.drawable.dice_six" />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:text="Roll"
        android:textColorHighlight="#DA7373"
        android:textColorLink="#CE7676"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/imageview"
        app:layout_constraintTop_toBottomOf="@+id/imageview" />


    <TextView
        android:id="@+id/tvCurrentPlayerText"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:text="Current Player:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/tvCurrentPlayer"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentPlayerText"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/tvPlayer1"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:text="Player 1 total:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRoll"
        app:layout_constraintVertical_bias="0.068" />

    <TextView
        android:id="@+id/tvPlayer2"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:text="Player 2 total:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer1"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/tvPlayer1Total"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentPlayer"
        app:layout_constraintVertical_bias="0.237" />

    <TextView
        android:id="@+id/tvPlayer2Total"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer1Total"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/tvJackpot"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:text="Jackpot:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer2"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/tvJackpotTotal"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer2Total"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/tvEquation"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:hint="Equation"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJackpot"
        app:layout_constraintVertical_bias="0.157" />


    <EditText
        android:id="@+id/etUserAnswer"
        android:layout_width="90dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="number|numberSigned"
        android:hint="Answer"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJackpotTotal"
        app:layout_constraintVertical_bias="0.093" />


    <Button
        android:id="@+id/btnEnter"
        android:layout_width="217dp"
        android:layout_height="67dp"
        android:text="Guess"
        android:textColorHighlight="#03A9F4"
        android:textColorLink="#03A9F4"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <TextView
        android:id="@+id/tvUserNotification"
        android:layout_width="319dp"
        android:layout_height="61dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnter" />


</androidx.constraintlayout.widget.ConstraintLayout>